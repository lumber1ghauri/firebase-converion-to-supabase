
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload payment screenshots only into their own user-specific folder.
    // The path ensures that a user can only write to a directory that matches their UID.
    match /payment_screenshots/{userId}/{bookingId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    // Allow authenticated users (client or admin) to read screenshots.
    match /payment_screenshots/{userId}/{allPaths=**} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }
  }
}
