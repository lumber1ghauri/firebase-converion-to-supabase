
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload payment screenshots only into their own user-specific folder.
    // The path ensures that a user can only write to a directory that matches their UID.
    match /payment_screenshots/{userId}/{bookingId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read their own screenshots.
    // This is useful if you want to display the screenshot back to the user in the future.
    match /payment_screenshots/{userId}/{allPaths=**} {
        allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
