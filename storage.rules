
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // This rule allows any signed-in user (including anonymous users)
    // to upload a file to the payment_screenshots directory.
    // We add a size validation to prevent abuse.
    match /payment_screenshots/{userId}/{bookingId}/{allPaths=**} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024; // Allow uploads up to 5MB
    }
    
    // Allow an authenticated user (the one who uploaded) or an admin to read screenshots.
    // This allows the user to potentially see their own uploaded screenshot and the admin to review it.
    match /payment_screenshots/{userId}/{allPaths=**} {
        allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }
  }
}
