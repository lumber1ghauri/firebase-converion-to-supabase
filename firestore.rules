rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    match /bookings/{bookingId} {
      // Allow read access for the owner or an admin
      allow read: if isOwner(resource.data.uid) || isAdmin();

      // Any signed-in user can create a booking if they are the owner of the new document.
      // Admins can also create bookings.
      allow create: if isOwner(request.resource.data.uid) || isAdmin();
      
      // The owner or an admin can update a booking.
      allow update: if isSignedIn() && (isOwner(resource.data.uid) || isAdmin());
      
      // Admins can delete any booking.
      allow delete: if isAdmin();
    }
    
    match /bookings/{booking} {
        // Only admins can list all bookings
        allow list: if isAdmin();
    }
  }
}
