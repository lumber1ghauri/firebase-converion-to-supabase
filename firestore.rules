rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for bookings
    match /bookings/{bookingId} {
      // Any signed-in user can create a booking if they are the owner.
      allow create: if isOwner(request.resource.data.uid);
      
      // Only the owner or an admin can read, update, or delete a specific booking.
      allow read, update, delete: if isSignedIn() && (isOwner(resource.data.uid) || isAdmin());
      
      // Only admins can list all bookings for the dashboard.
      allow list: if isAdmin();
    }
  }
}
