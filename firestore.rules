rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    match /bookings/{bookingId} {
      // ANYONE can read booking data. This is insecure for production.
      allow read: if true;

      // Any signed-in user can create a booking if they are the owner of the new document.
      allow create: if isOwner(request.resource.data.uid);
      
      // The owner or an admin can update a booking.
      allow update: if isSignedIn() && (isOwner(resource.data.uid) || isAdmin());
      
      // Admins can delete any booking.
      allow delete: if isAdmin();
    }
    
    match /bookings {
        // ANYONE can list all bookings. This is insecure for production.
        allow list: if true;
    }
  }
}
