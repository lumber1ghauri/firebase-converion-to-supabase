rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    // --- Rules for the 'bookings' collection ---

    // Rule for listing all documents in the collection
    // This is required for the admin dashboard
    match /bookings {
        allow list: if isAdmin();
    }

    // Rules for individual booking documents
    match /bookings/{bookingId} {
      // Any signed-in user can create a booking if they are the owner of the document.
      allow create: if isOwner(request.resource.data.uid);
      
      // The owner or an admin can read or update their own booking.
      allow read, update: if isSignedIn() && (isOwner(resource.data.uid) || isAdmin());
      
      // Admins can delete any booking.
      allow delete: if isAdmin();
    }
  }
}
