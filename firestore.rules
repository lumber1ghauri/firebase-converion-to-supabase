rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    function isOwnerByEmail(email) {
        return isSignedIn() && request.auth.token.email == email;
    }

    // Rules for user profiles
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // Rules for bookings
    match /bookings/{bookingId} {
      allow create: if isSignedIn(); // Any authenticated user can create a booking
      allow read: if isOwnerByEmail(resource.data.contact.email) || isAdmin(); // Owner or admin can read
      allow update: if isOwnerByEmail(request.resource.data.contact.email) || isAdmin(); // Owner or admin can update
      allow delete: if isAdmin(); // Only admin can delete
      allow list: if isAdmin(); // Only admin can list all bookings
    }

    match /makeup_services/{makeupServiceId} {
      // Read rules
      allow get: if true;
      allow list: if true;

      // Write rules - Restrict all write operations
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}
