rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check for a custom claim 'admin' on the user's token
      return isSignedIn() && request.auth.token.admin == true;
    }
    
    function isOwnerByEmail(email) {
        return isSignedIn() && request.auth.token.email == email;
    }

    // Rules for bookings
    match /bookings/{bookingId} {
      // Anyone who is signed in can create a booking for themselves.
      allow create: if isSignedIn() && request.resource.data.contact.email == request.auth.token.email;
      
      // Only the owner (by email) or an admin can read or update a single booking.
      allow read, update: if isOwnerByEmail(resource.data.contact.email) || isAdmin();

      // Only admins can delete a booking.
      allow delete: if isAdmin();
      
      // Only admins can list all bookings. This is crucial for the admin dashboard.
      allow list: if isAdmin();
    }

    // Default deny all other reads/writes
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }
  }
}
